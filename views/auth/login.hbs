<div class="container-fluid content">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="page-avatar"></div>
        <h1 class="text-center"><strong>{{title}}</strong></h1>
        <p class="text-center">Welcome Ironhacker!</p>
        <div class="row justify-content-center">
          <div class="col-12 col-sm-5">
            {{#if message}}
            <div class="alert alert-primary" role="alert">
              {{message}}
            </div>
            {{/if}}
            {{#if error.validation}}
            <div class="alert alert-danger" role="alert">
              {{error.validation.message}}
            </div>
            {{/if}}
            <form action="/login" method="POST">
              <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fas fa-at"></i></span>
                <label for="email">Email</label>
                <input name="email" type="text" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
                  placeholder="Enter email" value="{{ user.email }}">
                {{#if error.email}}
                <div class="invalid-feedback">
                  {{error.email.message}}
                </div>
                {{/if}}
              </div>
              <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fas fa-key"></i></span>
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}"
                  id="password" placeholder="Enter password" value="{{ user.password }}">
                  <span>
                      <i class="fa fa-eye" aria-hidden="true"  type="button" id="eye"></i>
                  </span>                
                {{#if error.password}}
                <div class="invalid-feedback">
                  {{error.password.message}}
                </div>
                {{/if}}
              </div>
              <div class="d-flex mb-3">
                <button type="submit" class="btn mr-3">Login</button>
              </div>
              <div class="d-flex mb-3"><a href="/auth/slack" class="btn btn-social"><i class="fa fa-slack"></i> Login
                  with Slack</a></div>
              <div class="d-flex mb-3">
                <a href="/auth/google" class="btn btn-social"><i class="fa fa-google"></i> Login with
                  Google</a>
              </div>
              <div class="d-flex mb-3">
                <a href="/auth/facebook" class="btn btn-social"><i class="fa fa-facebook"></i> Login with
                  Facebook</a>
              </div>
              <p>Don't have an account? <a href="/signup">register</a></p>
            </form>
            <iframe src="https://www.google.com/maps/d/embed?mid=1O1QtxQzZLIo8HrttSY1xl6PMc78SvTZu" width="100%" height="400"></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>