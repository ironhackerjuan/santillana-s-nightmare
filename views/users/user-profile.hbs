<div class="container-fluid content">
  <div class="row">
    <div class="col-12 col-sm-4 profile-bg"></div>
    <div class="col-12 col-sm-3">
        <h1>Perfil de {{user.name}}</h1>
        <form action="/user-profile/{{user._id}}/edit" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fas fa-id-card"></i></span>
            <label for="name">Name</label>
            <input name="name" type="text" class="form-control {{#if error.name }}is-invalid{{/if}}" id="name"
              placeholder="Enter name" value="{{ user.name }}">
            {{#if error.name}}
            <div class="invalid-feedback">
              {{error.name.message}}
            </div>
            {{/if}}
          </div>
          <div class="form-group">
            <span class="col-md-1 col-md-offset-2 text-center"><i class="far fa-id-badge"></i></span>
            <label for="username">Username</label>
            <input name="username" type="text" class="form-control {{#if error.username }}is-invalid{{/if}}"
              id="username" placeholder="Enter username" value="{{ user.username }}">
            {{#if error.username}}
            <div class="invalid-feedback">
              {{error.username.message}}
            </div>
            {{/if}}
          </div>
          <div class="form-group">
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fas fa-at"></i></span>
            <label for="email">Email</label>
            <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
              placeholder="Enter email" value="{{ user.email }}">
            {{#if error.email}}
            <div class="invalid-feedback">
              {{error.email.message}}
            </div>
            {{/if}}
          </div>
          <div class="form-group">
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fas fa-images"></i></span>
            <label for="avatar">Avatar</label>
            <input name="avatar" type="file" class="form-control-file {{#if error.avatar }}is-invalid{{/if}}"
              id="avatar" placeholder="Enter avatar" value="{{ user.avatar }}">
            {{#if error.avatar}}
            <div class="invalid-feedback">
              {{error.avatar.message}}
            </div>
            {{/if}}
          </div>
          <div class="form-group">
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fas fa-key"></i></span>
            <label for="password">Password</label>
            <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}"
              id="password" placeholder="password" value="{{ user.password }}">
              <span>
                <i class="fa fa-eye" aria-hidden="true"  type="button" id="eye"></i>
              </span>
            {{#if error.password}}
            <div class="invalid-feedback">
              {{error.password.message}}
            </div>
            {{/if}}
          </div>
          <div class="form-group">
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
            <label for="bio">Bio</label>
            <textarea name="bio" type="text" class="form-control {{#if error.bio }}is-invalid{{/if}}" id="bio"
              placeholder="Enter bio" value="{{ user.bio }}" rows="4"></textarea>
            {{#if error.bio}}
            <div class="invalid-feedback">
              {{error.bio.message}}
            </div>
            {{/if}}
          </div>
          <button type="submit" class="btn btn-primary">
            Update profile
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fas fa-file-upload"></i></span>
          </button>
          <button type="button" class="btn bbtn-text" data-toggle="modal" data-target="#delete">
            Delete profile
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fas fa-eraser"></i></span>
          </button>
        </form>
        <!-- Modal -->
        <div class="modal fade" id="delete" tabindex="-1" aria-labelledby="deleteLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="deleteLabel">Delete profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Are you sure?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a href="/user-profile/{{user._id}}/delete" class="btn btn-primary">Delete profile</a>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>