{{#unless admin}}
<header class="container-fluid">
  <div class="row">
    <div class="col-12">
      <nav class="navbar navbar-light">
        <a class="navbar-brand" href="/">Summer Project</a>
        <ul class="navbar-nav">
          {{#if user}}
          <li class="user-info">
            <a href="/user-profile/{{user._id}}" class="nav-avatar"
              style="background: #65c9ff url({{user.avatar}}) no-repeat center center / cover; width:30px; height:30px; display:block;">
            </a>
            <p>Hi <strong>@{{user.username}}</strong></p>
          </li>
          <li class="nav-item home">
            <a class="nav-link" href="/"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-house"
                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                <path fill-rule="evenodd"
                  d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
              </svg></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/project/{{user._id}}/new">Make a post</a>
          </li>
          <li class="nav-item logout">
            <form id="logout-form" action="/logout" method="POST">
              <button class="nav-link">Logout</button>
            </form>
          </li>
          {{else}}
          <li class="nav-item no-user">
            <a class="nav-link" href="/signup">Signup</a>
          </li>
          <li class="nav-item no-user">
            <a class="nav-link" href="/login">Login</a>
          </li>
          {{/if}}
        </ul>
      </nav>
    </div>
  </div>
</header>
{{/unless}}
{{#if admin}}
<li class="nav-item">
  <a class="nav-link" href="/admin">Admin</a>
</li>
{{/if}}